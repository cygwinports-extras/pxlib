DESCRIPTION="Paradox database file library"
HOMEPAGE="http://pxlib.sourceforge.net/"
SRC_URI="mirror://sourceforge/${PN}/${P}.tar.gz"

abi=0
PKG_NAMES="${PN} libpx${abi} libpx-devel"
PKG_HINTS="setup lib devel"
PKG_CONTENTS[0]='usr/share/doc/'
PKG_CONTENTS[1]="usr/bin/*-${abi}.dll usr/share/locale/"
PKG_CONTENTS[2]='usr/include/ usr/lib/'

DIFF_EXCLUDES="paradox-gsf.h paradox.h pxversion.h"

CYGCONF_ARGS="--includedir=/usr/include/pxlib --with-gsf=/usr"
